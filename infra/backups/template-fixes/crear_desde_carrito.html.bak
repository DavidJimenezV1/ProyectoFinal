{% extends 'base.html' %}

{% block title %}Cotización desde Carrito - Tejos Olímpica{% endblock %}

{% block content %}
<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{% url 'home' %}">Inicio</a></li>
            <li class="breadcrumb-item"><a href="{% url 'carrito:ver_carrito' %}">Carrito</a></li>
            <li class="breadcrumb-item active" aria-current="page">Finalizar Cotización</li>
        </ol>
    </nav>

    <h2 class="mb-4">Finalizar Cotización desde tu Carrito</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resumen de tu Pedido</h5>
                </div>
                <div class="card-body p-0">
                    {% if items %}
                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unitario</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in items %}
                                    <tr>
                                        <td>
                                            <a href="{% url 'catalogo:detalle_producto' item.producto.id %}" class="text-decoration-none">
                                                {{ item.producto.nombre }}
                                            </a>
                                            <br>
                                            <small class="text-muted">{{ item.producto.codigo }}</small>
                                        </td>
                                        <td>{{ item.cantidad }}</td>
                                        <td>${{ item.precio_unitario|floatformat:2 }}</td>
                                        <td><strong>${{ item.subtotal|floatformat:2 }}</strong></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                        <td><strong>${{ total|floatformat:2 }}</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-warning m-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Tu carrito está vacío. <a href="{% url 'catalogo:lista_productos' %}">Vuelve al catálogo</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            {% if items %}
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Solicitar Cotización Formal</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% csrf_token %}
                        
                        <div class="mb-3">
                            <label for="notas_cliente" class="form-label">Notas o Requisitos Especiales (Opcional)</label>
                            <textarea 
                                class="form-control" 
                                id="notas_cliente" 
                                name="notas_cliente" 
                                rows="4" 
                                placeholder="Ej: Color específico, plazo de entrega, términos de pago, etc.">{{ form.notas_cliente.value|default:'' }}</textarea>
                        </div>

                        <div class="alert alert-info small mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Próximo paso:</strong> Envía tu solicitud y nuestro equipo de ventas revisará tu cotización y te contactará con precios finales en las próximas 24 horas.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Enviar Cotización Formal
                            </button>
                            <a href="{% url 'carrito:ver_carrito' %}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver al Carrito
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
